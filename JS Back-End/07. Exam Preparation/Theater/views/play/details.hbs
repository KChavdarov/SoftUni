<div class="container">
    <section class="details">
        <h1>Theater title: {{play.title}}</h1>
        <div>
            <img src="{{play.imageUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{play.description}}</p>
        {{#if user}}
        <div class="buttons">
            {{#if isOwner}}
                <a class="btn delete" href="/plays/delete/{{play._id}}">Delete</a>
                <a class="btn edit" href="/plays/edit/{{play._id}}">Edit</a>
                {{else}}
                    {{#if isLiked}}
                    <span class="liked">You have already liked this play!</span>
                    {{else}}
                    <a class="btn like" href="/plays/like/{{play._id}}">Like</a>
                    {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </section>
</div>