<section>
    <h2>Edit article </h2>
    <div class="spacer">
        <form action="/articles/edit/{{article._id}}" method="POST">
            <label>Article Title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="description">{{article.description}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>