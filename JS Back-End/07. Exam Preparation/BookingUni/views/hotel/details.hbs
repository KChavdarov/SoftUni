<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        {{#with hotel}}
        <div class="hotel-left">
            <img src="{{imageUrl}}" alt="">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{name}}</h3>
            </div>
            <div>
                {{city}}
            </div>
            <p><span>Free rooms: {{rooms}}</span> </p>
            {{#if isOwner}}
                <a href="/hotels/edit/{{_id}}" class="edit">Edit</a>
                <a href="/hotels/delete/{{_id}}" class="remove">Delete</a>
                {{else}}
                    {{#if isBooked}}
                    <p><span class="green">You already have booked a room</span> </p>
                    {{else}}
                    <a href="/hotels/book/{{_id}}" class="book">Book</a>
                    {{/if}}
            {{/if}}
        </div>
        {{/with}}
    </div>
</section>