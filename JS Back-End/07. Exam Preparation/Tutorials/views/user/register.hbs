<form class="text-center border border-light p-5" action="/auth/register" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" class="form-control" placeholder="Username" name="username" value="{{data.username}}">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" class="form-control" placeholder="Password" name="password" value="">
    </div>

    <div class="form-group">
        <label for="rePassword">Repeat Password</label>
        <input id="rePassword" type="password" class="form-control" placeholder="Repeat-Password" name="repeatPassword" value="">
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>