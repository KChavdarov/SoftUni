<div class="card mb-4">
    <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        {{#unless isUser}}
        <small class="float-right">Enrolled: {{enrolled}}</small>
        {{/unless}}
    </div>
    {{#if isUser}}
    <div class="card-footer">
        <a href="/courses/details/{{_id}}"><button type="button" class="btn btn-primary">Details</button></a>
        <small class="float-right">{{duration}}</small>
    </div>
    {{/if}}
</div>