{{#with user}}
<section class="profile col-md-6 text-center col-lg" id="profile-page">
    <div class="profile-container">
        <img class="profile-img" src="/static/images/{{gender}}.png">
        <p>Email: <span>{{email}}</span></p>
    </div>
    <div class="profile-info">
        <p>Trips History: <span>{{tripCount}}</span> counts</p>

        <div class="trips-info">
            {{#each trips}}

            <p>from <span>{{this.start}}</span> to <span>{{this.end}}</span> on <span>{{this.date}}</span> at
                <span>{{this.time}}</span>
            </p>
            {{else}}
            <p>there are no offer trips yet...</p>
            {{/each}}
        </div>

    </div>
</section>
{{/with}}